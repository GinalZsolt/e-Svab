<%- include('header') %> 
<h2 class="text-center" >Regisztráció</h2>
<hr>
<form method="post" action="/users/reg">
    <div class="row">
        <div class="offset-lg-3 col-lg-6">
            <%- include('message') %>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 offset-lg-3 col-lg-6">
            <label for="name" class="form-label">Felhasználónév</label>
            <input type="name" class="form-control" name="name" >
        </div>
    </div>
    <div class="row">
        <div class="mb-3 offset-lg-3 col-lg-6">
            <label for="email" class="form-label">Email cím</label>
            <input type="email" class="form-control" name="email" >
        </div>
    </div>
    <div class="row">
        <div class="mb-3 offset-lg-3 col-lg-6">
            <label for="password" class="form-label">Jelszó</label>
            <input type="password" class="form-control" name="password">
        </div>
    </div>
    <div class="row">
        <div class="mb-3 offset-lg-3 col-lg-6">
            <label for="password" class="form-label">Jelszó megerősítése</label>
            <input type="password" class="form-control" name="password2">
        </div>
    </div>
        <div class="row">
            <div class="offset-lg-3 col-lg-3">
                <button type="submit" class="btn btn-outline-success">Regisztráció</button>
                <a  class="btn btn-outline-primary" href="/">Bejelentkezés</a>
            </div>
        </div>
</form>
<%- include('footer') %> 