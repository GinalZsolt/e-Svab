<%- include('header') %> 

<h2 class="text-center">Profil módosítása</h2>

<form action="/users/profilmod" method="post">
    
    <div class="row">
        <div class="mt-3 offset-lg-3 col-lg-6">
            <%- include('message') %> 
        </div>
    </div>

    <div class="row">
        <div class="mb-3 offset-lg-3 col-lg-6">
          <label for="name" class="form-label">Új felhasználónév</label>
          <input type="text" class="form-control" name="name">
        </div>
      </div>
      <div class="row">
        <div class="mb-3 offset-lg-3 col-lg-6">
          <label for="email" class="form-label">Új Email cím</label>
          <input type="email" class="form-control" name="email">
        </div>
      </div>
      <div class="row">
        <div class="offset-lg-3 col-lg-4">
          <button type="submit" class="btn btn-outline-success">Frissítés</button>
        </div>
      </div>
</form>

<%- include('footer') %> 